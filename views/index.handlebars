<h1>Burgers, Burgers, Burgers!</h1>
<img src="/assets/img/Burger.png" id="image" alt="burger">
<br>
<br>
<h1>Eat-Tha-Burga</h1>
<ol id="list1">
    {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoure=true}}
    {{/unless}}
  {{/each}}
</ol>

<ol id="list2">
    {{#each burgers}}
      {{#if devoured}}
         <li> {{burger_name}} </li>
      {{/if}}
    {{/each}}
</ol>

<div class="form">
<form class="create-form">

  <div class="form-group">
    <textarea type="text" id="bu" name="burger_name"> </textarea>
  </div>

  <div class="form-group" id="devourede">
    <input type="radio" name="devoured" value="0" checked> devoure it<br>
    <input type="radio" name="devoured" value="1"> not
  </div>


  <button type="submit" id="btn">submit</button>
  <h3>Add a burger of your choice.</h3> 
</form>
</div>